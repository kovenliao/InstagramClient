<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/llAuthorRow"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/ivUserPhoto" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="user name"
            android:id="@+id/tvUsername"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:textSize="16sp"
            android:paddingLeft="12pt"
            android:paddingTop="6pt"
            android:paddingBottom="6pt"
            android:textColor="@color/color_username"
            android:textIsSelectable="true" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ivPhoto"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/llAuthorRow"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
         />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivPhoto"
        android:id="@+id/llLikeRow"
        android:paddingLeft="12pt"
        android:paddingTop="6pt"
        android:paddingBottom="1pt">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="like"
            android:id="@+id/tvLike"
            android:textColor="@color/color_username"
            android:layout_alignParentLeft="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:id="@+id/tvTime"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:paddingLeft="12pt" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="caption"
        android:id="@+id/tvCaption"
        android:textSize="16sp"
        android:maxLines="3"
        android:paddingLeft="12pt"
        android:ellipsize="end"
        android:layout_below="@+id/llLikeRow"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/color_caption"
        android:textStyle="bold"
        android:paddingBottom="12pt" />
</RelativeLayout>
